{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/*"],
      "~/*": ["src/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "../react-nativescript/node_modules", "platforms"]
}
